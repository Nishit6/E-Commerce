<%- include("../partials/header")  %>
<%- include("../partials/navbarRes")  %>

<link rel="stylesheet" href="/css/userprofile.css">

<div class="container">
        <div class="main">
            <div class="row">
                <div class="col-md-4 mt-5">
                    <div class="card text-center sidebar">
                        <div class="card-body">
                           <% if(!currentUser.profileImage){ %>
                            <img src="https://bellfund.ca/wp-content/uploads/2018/03/demo-user.jpg" class="rounded-circle" width="280px">
                           <% }else { %>
                            <img src="<%= currentUser.profileImage  %>" class="rounded-circle" width="280px">
                            <% } %>
                            <div class="mt-3">
                                <h3><%= currentUser.firstName  %>&nbsp;<%= currentUser.lastName  %></h3>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-8 mt-5">
                    <div class="card mb-3 content">
                        <h1 class="m-3 pt-3">About</h1>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-3">
                                    <h5>Full name</h5>
                                </div>
                                <div class="col-md-9 text-secondary">
                                    <%= currentUser.firstName  %>&nbsp;<%= currentUser.lastName  %>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-md-3">
                                    <h5>Email</h5>
                                </div>
                                <div class="col-md-9 text-secondary">
                                    <%= currentUser.email %>
                                </div>
                            </div>
                        
                            <hr>
                            <div class="row">
                                <div class="col-md-3">
                                    <h5>Mobile number</h5>
                                </div>
                                <div class="col-md-9 text-secondary">
                                    <%= currentUser.phone %>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-md-3">
                                    <h5>Address</h5>
                                </div>
                                <div class="col-md-9 text-secondary">
                                    <%= currentUser.address  %>
                                </div>
                            </div>
                        </div>
                    </div>
                    <form action="/user/<%= currentUser.id %>/edit ">
                        <button class="btn-danger">Edit</button>
                    </form>
                   