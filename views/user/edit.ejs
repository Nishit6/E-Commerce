<%- include("../partials/header") %> 
<%- include("../partials/navbarRes") %> 


<h5 class="display-5">Edit Details</h5>
<hr>


 <form class="validate-form" novalidate action="/user/<%= currentUser._id %>?_method=PATCH " method="POST" style="margin: 20px 150px 100px 350px; border: 2px solid #ccc; padding: 20px; width: 50vw;background-image: url('https://images.unsplash.com/photo-1603926350386-e2990135cf39?ixid=MnwxMjA3fDB8MHx0b3BpYy1mZWVkfDN8aVVJc25WdGpCMFl8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=60');">
   
     <div class="mb-3" >
       <label for="name" class="form-label">First Name:</label>
       <input type="text" class="form-control" id="name" aria-describedby="emailHelp" placeholder="Enter Text" name="firstName" value="<%= currentUser.firstName %> " required>
       <div id="emailHelp" class="form-text"></div>
       <div class="valid-feedback">
         Looks good!!
       </div>
       <div class="invalid-feedback">
         Please choose a valid Name.
       </div>
     </div>

     <div class="mb-3" >
        <label for="name" class="form-label">Last Name:</label>
        <input type="text" class="form-control" id="name" aria-describedby="emailHelp"  name="lastName" value="<%= currentUser.lastName %> " required>
        <div id="emailHelp" class="form-text"></div>
        <div class="valid-feedback">
          Looks good!!
        </div>
        <div class="invalid-feedback">
          Please choose a valid Name.
        </div>
      </div>

     <div class="mb-3" >
         <label for="mobile" class="form-label">Mobile:</label>
         <input type="text" class="form-control" id="mobile"   name="phone" value="<%= currentUser.phone %> " required>
         <div id="emailHelp" class="form-text">Enter your mobile number here</div>
         <div class="valid-feedback">
           Looks good!!
         </div>
         <div class="invalid-feedback">
           Please choose a input.
         </div>
       </div>
    
       <div class="col-md-6">
        <label for="profileImage" class="form-label">Choose an image for profile </label>
        <input type="file" class="form-control inp" id="profileImage" name="profileImage">
        <div class="valid-feedback">
            Looks good!
        </div>
    </div>

     <div class="mb-3">
         <label for="desc" class="form-label">Address:</label>
         <textarea class="form-control" id="desc" rows="3"name="address" required><%= currentUser.address %>  </textarea >
           <div class="valid-feedback">
             Looks good!!
           </div>
           <div class="invalid-feedback">
             Please add an address.
           </div>
       </div>
     <button type="submit" class="btn btn-success">SAVE</button>
   </form>

  
 









<%- include("../partials/footer") %> 