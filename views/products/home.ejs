
   
   <%- include("../partials/header") %> 
   <%- include("../partials/navbarRes") %>
  

   <h5 class="display-5">Products</h5>
   <hr>
   

 
  
 
        
        
    <div class="container"  >
      <%- include("../partials/flash") %> 
        <div class="row">
            <% for(let item of products) {%>
            <div class="col-lg-4"  >
                <div class="card" style="width: 15rem; margin: 40px auto;">
                    
                    <div class="card-body" >
                        <img src="<%= item.img %> " class="card-img-top" style="height: 150px;width: 200px;"> 
                      <h6 class="card-title" style="padding-top: 5px;"><%= item.name %> </h6>
                     
                      <h7 class="card-title display-6" style="font-size: 1rem; font-weight: bold;">$ <%= item.price %> </h7>
                      <br>
                      <p class="card-text"><%= item.desc.substring(0,30) %>... </p>
                      <a href="/products/<%= item._id %>" class="btn btn-outline-info" style="display: flex;justify-content: space-evenly;text-align: end;">More Info</a>
                      
                    </div>
                  </div>
           
                
              </div>
              <% } %> 
            </div>
        </div>

    </div>

     






  
