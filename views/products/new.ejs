<style>
  body{
    background-color: rgb(228, 231, 209);
  }
</style>
<h5 class="display-5" style="margin-left: 15px;">Add Product Details</h5>
<hr>


<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-8">

      <form  class="validate-form" novalidate method="POST" action="/products"  style="border: 2px solid #ccc; padding: 20px; background-image: url('https://images.unsplash.com/photo-1603926350386-e2990135cf39?ixid=MnwxMjA3fDB8MHx0b3BpYy1mZWVkfDN8aVVJc25WdGpCMFl8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=60');">
        <div class="mb-3" >
          <label for="name" class="form-label">Product Name:</label>
          <input type="text" class="form-control" id="name" aria-describedby="emailHelp" placeholder="Enter Text" name="product[name]" required>
          <div id="emailHelp" class="form-text">Enter your product name here</div>
          <div class="valid-feedback">
            Looks good!!
          </div>
          <div class="invalid-feedback">
            Please add a Product Name.
          </div>
        </div>

        <div class="mb-3" >
          <label for="retailerName" class="form-label">Retailer Name:</label>
          <input type="text" class="form-control" id="retailerName" aria-describedby="emailHelp" placeholder="Enter Text" name="product[retailerName]" required>
          <div id="emailHelp" class="form-text">Enter Retailer name here</div>
          <div class="valid-feedback">
            Looks good!!
          </div>
          <div class="invalid-feedback">
            Please add a Retailer Name.
          </div>
        </div>


        <div class="mb-3" >
            <label for="img" class="form-label">Image URL:</label>
            <input type="text" class="form-control" id="img"  placeholder="Enter URL" name="product[img]" required>
            <div id="emailHelp" class="form-text">Enter your product name here</div>
            <div class="valid-feedback">
              Looks good!!
            </div>
            <div class="invalid-feedback">
              Please choose a URL.
            </div>
          </div>
        <div class="mb-3">
          <label for="price" class="form-label">Price($):</label>
          <input type="number" class="form-control" id="price" placeholder="Enter Price" name="product[price]" required>
          <div class="valid-feedback">
            Looks good!!
          </div>
          <div class="invalid-feedback">
            Please choose a Price Value.
          </div>
        </div>
        <div class="mb-3">
            <label for="desc" class="form-label">Product Description</label>
            <textarea class="form-control" id="desc" rows="3"name="product[desc]"  required></textarea>
              <div class="valid-feedback">
                Looks good!!
              </div>
              <div class="invalid-feedback">
                Please add a Description.
              </div>
          </div>
        <button type="submit" class="btn btn-primary">SAVE</button>
      </form>
    


    </div>
    <div class="col-lg-2"></div>
  </div>
</div>


  





